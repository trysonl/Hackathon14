<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:entries="@array/emotions"
        android:prompt="@string/emotion_prompt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recipe"
        android:layout_gravity="center_horizontal"
        android:hint="Recipe" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredient"
        android:layout_gravity="center_horizontal"
        android:hint="Ingredients" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calorie"
        android:layout_gravity="center_horizontal"
        android:hint="Calories" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prepTime"
        android:layout_gravity="center_horizontal"
        android:hint="Prep Time" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/difficultyLevel"
        android:layout_gravity="center_horizontal"
        android:hint="Difficulty Level" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/servingNum"
        android:layout_gravity="center_horizontal"
        android:hint="Serving Number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Meal"
        android:id="@+id/nextMealButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>